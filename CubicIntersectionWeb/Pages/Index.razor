@inject IJSRuntime JsRuntime
@inject IInterceptor Interceptor
@page "/"

<div class="d-flex flex-column">
    <div class="d-flex flex-row justify-content-center">
        <div class="flex-column justify-content-center">
            <div class="flex-column justify-content-center">
                <span>Dimensions</span>
            </div>
            <div class="flex-column justify-content-center">
                <div class="input-group">
                    <span class="input-group-text">X</span>
                    <input class="form-control" type="number" @bind-value="@Cubic1.Dimension.X" min="-5" max="5"/>
                </div>
                <div class="input-group">
                    <span class="input-group-text">Y</span>
                    <input class="form-control" type="number" @bind-value="@Cubic1.Dimension.Y" min="-5" max="5"/>
                </div>
                <div class="input-group">
                    <span class="input-group-text">Z</span>
                    <input class="form-control" type="number" @bind-value="@Cubic1.Dimension.Z" min="-5" max="5"/>
                </div>
            </div>
        </div>
        <div class="flex-column justify-content-center">
            <div class="flex-column justify-content-center">
                <span>Center</span>
            </div>
            <div class="flex-column justify-content-center">
                <div class="input-group">
                    <span class="input-group-text">X</span>
                    <input class="form-control" type="number" @bind-value="@Cubic1.Center.X" min="-5" max="5"/>
                </div>
                <div class="input-group">
                    <span class="input-group-text">Y</span>
                    <input class="form-control" type="number" @bind-value="@Cubic1.Center.Y" min="-5" max="5"/>
                </div>
                <div class="input-group">
                    <span class="input-group-text">Z</span>
                    <input class="form-control" type="number" @bind-value="@Cubic1.Center.Z" min="-5" max="5"/>
                </div>
            </div>
        </div>
        <div class="flex-row justify-content-center">
            <div class="flex-column justify-content-center">
                <span>Dimensions</span>
            </div>
            <div class="flex-column justify-content-center">
                <div class="input-group">
                    <span class="input-group-text">X</span>
                    <input class="form-control" type="number" @bind-value="@Cubic2.Dimension.X" min="-5" max="5"/>
                </div>
                <div class="input-group">
                    <span class="input-group-text">Y</span>
                    <input class="form-control" type="number" @bind-value="@Cubic2.Dimension.Y" min="-5" max="5"/>
                </div>
                <div class="input-group">
                    <span class="input-group-text">Z</span>
                    <input class="form-control" type="number" @bind-value="@Cubic2.Dimension.Z" min="-5" max="5"/>
                </div>
            </div>
        </div>
        <div class="flex-column justify-content-center">
            <div class="flex-column justify-content-center">
                <span>Center</span>
            </div>
            <div class="flex-column justify-content-center">
                <div class="input-group">
                    <span class="input-group-text">X</span>
                    <input class="form-control" type="number" @bind-value="@Cubic2.Center.X" min="-5" max="5"/>
                </div>
                <div class="input-group">
                    <span class="input-group-text">Y</span>
                    <input class="form-control" type="number" @bind-value="@Cubic2.Center.Y" min="-5" max="5"/>
                </div>
                <div class="input-group">
                    <span class="input-group-text">Z</span>
                    <input class="form-control" type="number" @bind-value="@Cubic2.Center.Z" min="-5" max="5"/>
                </div>
            </div>
        </div>
    </div>
    <button class="btn btn-info" onclick="@GetInterception">Run</button>
    <div class="d-flex justify-content-center">
        <div class="d-grid gap-2 d-md-block shadow">
            <div class="btn btn-lg btn-primary">@AreColliding</div>
            <div class="btn btn-lg btn-primary">@VolumeIntercept</div>
        </div>
    </div>
    <div>
        <canvas id="myCanvas" style="width: 100%;height: 100%;"></canvas>
    </div>
</div>